<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.addon.module"
      name="Addon Module Repository"
      version="1.0.0"
      provider-name="Thirdy">

  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>

  <extension point="xbmc.addon.repository">
    <dir>
      <info compressed="false">https://raw.githubusercontent.com/thoffical/adddonmodule/master/addons.xml</info>
      <checksum>https://raw.githubusercontent.com/thoffical/adddonmodule/master/addons.xml.md5</checksum>
      <datadir>https://raw.githubusercontent.com/thoffical/adddonmodule/master/</datadir>
      <artdir>https://raw.githubusercontent.com/thoffical/adddonmodule/master/</artdir>
    </dir>
  </extension>

  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <assets>
      <icon>icon.png</icon>
    </assets>
    <summary lang="en_US">Useful modules.</summary>
    <description lang="en_US">Download and install programs from the Addon Module Repository.</description>
  </extension>

</addon>
