<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.addon.module"
    name="Addon Module Repository"
    version="1.0.0"
    provider-name="Thirdy">

    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>

    <extension point="xbmc.addon.repository">
        <dir>
            <!-- The URLS below MUST match your GitHub repo -->
            <info compressed="false">https://raw.githubusercontent.com/thoffical/adddonmodule/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/thoffical/adddonmodule/master/addons.xml.md5</checksum>
            <datadir zip="true">https://codeload.github.com/thoffical/adddonmodule/zip/ref/heads/master/</datadir>
        </dir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Useful modules for Kodi</summary>
        <description lang="en_GB">This repository contains module add-ons such as Revolve Skin Script and Favourites Script.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>

</addon>
